{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src", //https://dev.to/ianfelix/absolute-imports-in-react-native-57fc
    "paths": {
      "~/*": ["*"]
    },
    "allowJs": true,
    "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "src/components/error/index.js"
  ],
  "exclude": [
    "node_modules"
  ]
}